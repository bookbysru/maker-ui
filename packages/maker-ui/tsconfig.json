{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "noImplicitUseStrict": true,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js"],
  "exclude": ["src/**/*.test.ts", "node_modules"]
}
